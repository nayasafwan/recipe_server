generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}


enum Category {
  Breakfast
  Lunch 
  Dinner
  Snacks
  Appetizer
  Beverage
  Dessert
  Soup
  Salad
}

model Recipe {
    id String           @id @default(uuid())
    name String
    description String  @db.Text
    image String   @db.Text
    cookingTime String
    category     Category
    createdAt DateTime     @default(now())
    ingredients Ingredient[]
    instructions Instruction[] 
}

enum MeasuringUnit {
  Gram // gm
  Kilogram  // kg
  Teaspoon // tsp
  Tablespoon // tbsp
  Miligram     // mg
  Pound         // lb
  Ounce         // oz
  Pieces // pcs 
  Liter // L
  Milliter // ml
  Cup // cup 
  Gallon   // gal
}


model Ingredient {
  id String           @id @default(uuid())
  quantity  Float
  name String
  measuringUnit String?
  abbreviation String?
  recipeId String
  recipe Recipe @relation(fields: [recipeId], references: [id])
}

model Instruction {
  id String           @id @default(uuid())
  name String
  order Int 
  recipeId String 
  recipe Recipe @relation(fields: [recipeId], references: [id])    
}

model User {
  id String           @id @default(uuid())
  email String @unique
  password String
  username String @unique
}

